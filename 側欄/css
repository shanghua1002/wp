<!DOCTYPE html>
<html>
<body>
    <button onclick="move()">Click Me</button>
    <script>
        function move() {
            width += 10;
            height += 10;
            b.style = `position:${position}; width:${width}px; height:${height}px; left:${left}px; top:${top1}px;`;
        }
        let position = "absolute";
        let width = 60;
        let height = 40;
        let left = 250;
        let top1 = 200;
        let b = document.querySelector('button');

        b.style = `position:${position}; width:${width}px; height:${height}px; left:${left}px; top:${top1}px;`;
    </script>
</body>
</html>
